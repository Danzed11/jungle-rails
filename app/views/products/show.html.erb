<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  <div>
    <%= form_for [@product, @review], url: `/products/#{@product.id}/reviews` do |f| %>
      <div class="form-review">Rating: <%= f.select :rating, %w{ 1 2 3 4 5 } %> </div>
      <div class="form-review">Write a Review:</br> <%= f.text_area :description %></div>
      <div class="form-review"><%= f.submit "Post Review", class: 'btn btn-md btn-primary' %></div>
      <% end %>
      </br>

  <% @product.reviews.each do |r| %>
    <div>
      Review: <%= r.description %>
      Rating: <%= r.rating %>/5
      <% end %>
    </div> 
  </article>

</section>
